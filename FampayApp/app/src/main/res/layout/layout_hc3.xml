<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    android:padding="12dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/hc3_options_layout"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="12dp"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/hc3_remind_later_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_bell"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remind Later"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/hc3_dismiss_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_remove"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dismiss now"
                    android:textColor="@color/black"/>

            </LinearLayout>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            android:padding="12dp"
            app:cardBackgroundColor="#454AA6">

            <LinearLayout
                android:id="@+id/hc3_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/hc3_icon"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:src="@drawable/ic_unlock"
                    android:layout_margin="24dp"/>

                <TextView
                    android:id="@+id/hc3_big_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Big display card with action"
                    android:textColor="@android:color/white"
                    android:textSize="36sp"
                    android:paddingStart="20dp"
                    android:paddingEnd="28dp"
                    android:fontFamily="sans-serif-light"/>

                <TextView
                    android:id="@+id/hc3_small_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Big display card with action"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:paddingStart="20dp"
                    android:paddingEnd="28dp"
                    android:layout_marginTop="24dp"
                    android:fontFamily="sans-serif-light"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.cardview.widget.CardView>